<%= turbo_frame_tag "turbo_modal" do%>
  <div class="modal fade" id="exampleModal" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true" data-controller="turbo-modal" data-action="turbo:submit-end->turbo-modal#disconect">
    <div class="modal-dialog">
       <div class="modal-content">
        <div class="modal-header">
          <h5 class="modal-title" id="exampleModalLabel"><%=title%> </h5>
          <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
        </div>
        <div class="modal-body">          
          <%= render 'partials/errors'%>          
          <%=yield%>
        </div>
      </div>
    </div>
  </div>
<%end%>

