<%=form_with(model: @category, local: true) do |f| %>
  
  <div class="mt-2">
    <%= f.label :name, class:"form-label" %>
    <%= f.text_field :name, class: "form-control" %>
  </div>

  <div class="mt-2">
    <%= f.label :color, class:"form-label" %>
    <%= f.color_field :color, class: "form-control form-control-color" %>
  </div>

  <div class="mt-2">
    <%= f.label :to_analyze, class:"form-label" %>
    <%= f.check_box :to_analyze,checked: @category.to_analyze, class: "form-check-input" %>
  </div>

  <div class="mt-4">
    <span>
      <%= f.submit class: "btn btn-primary btn-sm" %>
    </span>
  </div>
  
<%end%>