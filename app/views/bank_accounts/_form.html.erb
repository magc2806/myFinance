<%= form_with(model: @bank_account, local: true) do |f|%>

  <div class="mt-2">
    <%= f.label :bank_name, class:"form-label" %>
    <%= f.text_field :bank_name, class: "form-control" %>
  </div>

  <div class="mt-2">
    <%= f.label :account_number, class:"form-label" %>
    <%= f.text_field :account_number, class: "form-control" %>
  </div>

  <div class="mt-2">
    <%= f.label :name, class:"form-label" %>
    <%= f.text_field :name, class: "form-control", placeholder: "Pincipal" %>
  </div>

  <div class="mt-4">
    <span>
      <%= f.submit class: "btn btn-primary btn-sm" %>
      <%= link_to t('views.common.back'), bank_accounts_path, class: 'btn btn-secondary btn-sm'%>
    </span>
  </div>
    

<%end%>